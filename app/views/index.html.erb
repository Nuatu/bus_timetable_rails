<div class="col-md-6">
<h3>Here are the current bus lines:</h3>

<ul>

  <%@lines.each do |line| %>
  <li id="col-border" class="list-text"><%= link_to "#{line.name}", line_path(line) %></li>
  <% end %>

</ul>

</div>
