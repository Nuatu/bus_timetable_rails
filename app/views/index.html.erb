<div id="col-border" class="col-md-6">
<h3>Here are the current bus stations:</h3>

<ul>

  <%@stations.each do |station| %>
  <li class="list-text"><%= link_to "#{station.name}", station_path(station) %></li>
  <% end %>

</ul>
</div>

